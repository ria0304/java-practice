import java.util.*;
import java.lang.*;
import java.io.*;


class findarea
{
  public int fact(int i){
    if(i==0){
      return 1;
    }
    return i*fact(i-1);
  }
	public static void main (String[] args) throws java.lang.Exception
	{
	    int n=4;
	    findarea g = new findarea();
	    for(int i=0;i<=n;i++){
	      for(int j=0;j<=i;j++){
	        System.out.print(" " + g.fact(i)/(g.fact(i-j)*g.fact(j)));
	      }
	      System.out.println(" ");
	    }
	}
}
